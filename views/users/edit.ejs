<h2 class="page-header">Edit User</h2>
<div class="form-row">
  <div class="form-item">
    <form action="/users/<%= user.id %>?_method=PUT" method="POST">
      <%- include('_form_fields') %>
      <div class="form-row">
        <div class="form-item">
          <label>Password</label>
          <input type="password" name="password" value="">
        </div>
      </div>
      <div class="form-row form-row-end btn-row">
        <a class="btn btn-danger" href="/users/show/<%= user.id %>">Cancel</a>
        <button class="btn btn-primary" type="submit">Update</button>
      </div>
    </form>
  </div>
</div>
